    text = "*"
    
    'For loop for the 5 columns
    For colcounter = 1 To 5
        'Another for loop for the rows
        For rowcounter = 1 To colcounter
            'Print the text
            Cells(rowcounter, colcounter).Value = text
        Next rowcounter
    Next colcounter
    
End Sub

