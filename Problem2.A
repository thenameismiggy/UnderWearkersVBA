Sub ReverseRightTriangle()

    'Initialize the variables to be used
    Dim colcounter As Integer
    Dim text As String
    Dim row As Integer
    Dim col As Integer
    
    'Change accordingly to what you need, asterisks, odd numbers, etc.
    text = "*"
    
    'For loop for the 5 columns
    For colcounter = 1 To 5
        'Another for loop for the rows
        For rowcounter = 1 To colcounter
            'Print the text
            Cells(rowcounter, colcounter).Value = text
        Next rowcounter
    Next colcounter
    
End Sub

