Sub RightTriangle()

    'Initialize the variables to be used
    Dim colcounter As Integer
    Dim text As String
    Dim row As Integer
    Dim col As Integer
    
    'Change accordingly to what you need, asterisks, odd numbers, etc.
    text = "*"
    
    'For loop for the 5 rows
    For rowcounter = 1 To 5
        'Another for loop for the columns
        For colcounter = 1 To rowcounter
            'Print the text
            Cells(rowcounter, colcounter).Value = text
        Next colcounter
    Next rowcounter
    
End Sub
